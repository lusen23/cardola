<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@id/uibase_actionbar_container_cover"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@id/uibase_action_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@id/uibase_action_below"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uibase_action_bar_height"
                android:paddingTop="@dimen/uibase_action_bar_padding_top"/>

            <com.lusen.cardola.framework.uibase.ui.actionbar.ActionBarLayout
                android:id="@id/uibase_action_bar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uibase_action_bar_height"
                android:background="@color/uibase_action_bar_default_bg"
                android:paddingTop="@dimen/uibase_action_bar_padding_top"/>

            <View
                android:id="@id/uibase_action_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uibase_action_line_default_height"
                android:layout_gravity="bottom"
                android:background="@color/uibase_action_line_default_bg"/>

            <FrameLayout
                android:id="@id/uibase_action_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/uibase_action_bar_height"
                android:paddingTop="@dimen/uibase_action_bar_padding_top"
                android:visibility="gone"/>

        </FrameLayout>

        <FrameLayout
            android:id="@id/uibase_actionbar_container_divide"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </LinearLayout>

</FrameLayout>