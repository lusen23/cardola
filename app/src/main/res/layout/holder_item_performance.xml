<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

    <TextView
        android:id="@+id/day_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="16dp"
        android:singleLine="true"
        android:text="2017-05-01"
        android:textColor="@color/C_black"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/customer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/day_time"
        android:gravity="left"
        android:singleLine="true"
        android:text="商家名称"
        android:textColor="@color/C_black"
        android:textSize="14dp"/>

    <LinearLayout
        android:id="@+id/layout_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/day_time"
        android:layout_below="@id/day_time"
        android:layout_marginTop="6dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/state_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="已购买"
            android:textColor="@color/C_black"
            android:textSize="14dp"/>

        <TextView
            android:id="@+id/state_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:singleLine="true"
            android:text="已兑换"
            android:textColor="@color/C_black"
            android:textSize="14dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/customer_name"
        android:layout_alignTop="@id/layout_state"
        android:layout_toLeftOf="@id/layout_state"
        android:gravity="left"
        android:singleLine="true"
        android:text="@string/money_commission"
        android:textColor="@color/C_black"
        android:textSize="14dp"/>

    <View
        style="@style/DividerStyle"
        android:layout_below="@id/money"
        android:layout_marginTop="16dp"/>

</RelativeLayout>