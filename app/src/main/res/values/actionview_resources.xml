<?xml version="1.0" encoding="utf-8"?>
<resources>

    <item name="common_actionview_title_primary" type="id"/>
    <item name="common_actionview_title_secondary" type="id"/>
    <item name="common_actionview_icon" type="id"/>
    <item name="common_actionview_plain" type="id"/>

    <dimen name="common_actionview_default_padding_normal">2dp</dimen>
    <dimen name="common_actionview_default_padding_edge_most">15dp</dimen>

    <style name="common_actionview_primary_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="common_actionview_secondary_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>

    <style name="common_actionview_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="common_actionview_plain_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#472462</item>
    </style>

</resources>