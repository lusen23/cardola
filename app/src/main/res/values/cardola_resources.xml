<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/C_white</item>
        <item name="tabView">@style/TabIndicatorTheme</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/C_white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabIndicatorTheme" parent="TabView">
        <item name="android:background">@color/C_orange</item>
        <item name="iconWidth">28dp</item>
        <item name="iconHeight">28dp</item>
    </style>

    <style name="DividerStyle">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/C_grey</item>
    </style>

    <style name="ArrowStyle">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:background">@drawable/icon_arrow_right</item>
    </style>

    <style name="LoadingDialogStyle" parent="@android:style/Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CommonItemStyle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/xm_choice_simple_list_selector</item>
    </style>

    <declare-styleable name="CommonItemView">
        <attr name="name" format="string"/>
        <attr name="subname" format="string"/>
    </declare-styleable>

    <color name="C_black">#000000</color>
    <color name="C_grey">#98A4AE</color>
    <color name="C_orange">#fa7829</color>
    <color name="C_red">#f02a30</color>
    <color name="C_white">#FFFFFF</color>

    <dimen name="F_10">10dp</dimen>
    <dimen name="F_12">12dp</dimen>
    <dimen name="F_14">14dp</dimen>
    <dimen name="F_16">16dp</dimen>
    <dimen name="F_18">18dp</dimen>
    <dimen name="F_20">20dp</dimen>
    <dimen name="F_22">22dp</dimen>
    <dimen name="F_24">24dp</dimen>
    <dimen name="F_26">26dp</dimen>
    <dimen name="F_28">28dp</dimen>

    <dimen name="global_item_padding">20dp</dimen>

    <string name="splash_app_desc">车多啦业务平台</string>
    <string name="splash_version_desc">V1.0</string>

    <string-array name="home_tab_title_array">
        <item>@string/home_tab_title_0</item>
        <item>@string/home_tab_title_1</item>
        <item>@string/home_tab_title_2</item>
        <item>@string/home_tab_title_3</item>
    </string-array>

    <string name="home_tab_title_0">我的商户</string>
    <string name="home_tab_title_1">考核信息</string>
    <string name="home_tab_title_2">商品展示</string>
    <string name="home_tab_title_3">我的信息</string>

    <string name="actionbar_title_find_password">找回密码</string>
    <string name="actionbar_title_customer_list">我的商户</string>
    <string name="actionbar_title_checkinfo_list">考核信息</string>
    <string name="actionbar_title_product_assort">商品展示</string>
    <string name="actionbar_title_mine">我的</string>
    <string name="actionbar_title_add_customer">添加商家</string>
    <string name="actionbar_title_mine_account">我的账户</string>
    <string name="actionbar_title_mine_performance">我的绩效</string>
    <string name="actionbar_title_mine_message">我的消息</string>

    <string name="money_commission">提成: %s</string>

</resources>