<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/C_white</item>
        <item name="tabView">@style/TabIndicatorTheme</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/C_white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TabIndicatorTheme" parent="TabView">
        <item name="android:background">@color/C_orange</item>
        <item name="iconWidth">28dp</item>
        <item name="iconHeight">28dp</item>
    </style>

    <color name="C_black">#000000</color>
    <color name="C_grey">#98A4AE</color>
    <color name="C_orange">#fa7829</color>
    <color name="C_red">#f02a30</color>
    <color name="C_white">#FFFFFF</color>

    <dimen name="F_10">10dp</dimen>
    <dimen name="F_12">12dp</dimen>
    <dimen name="F_14">14dp</dimen>
    <dimen name="F_16">16dp</dimen>
    <dimen name="F_18">18dp</dimen>
    <dimen name="F_20">20dp</dimen>

    <string name="splash_app_desc">车多啦业务平台</string>
    <string name="splash_version_desc">V1.0</string>

    <string-array name="home_tab_title_array">
        <item>@string/home_tab_title_0</item>
        <item>@string/home_tab_title_1</item>
        <item>@string/home_tab_title_2</item>
        <item>@string/home_tab_title_3</item>
    </string-array>

    <string name="home_tab_title_0">我的商户</string>
    <string name="home_tab_title_1">考核信息</string>
    <string name="home_tab_title_2">商品展示</string>
    <string name="home_tab_title_3">我的信息</string>

</resources>